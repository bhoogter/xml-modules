{
  "name": "bhoogter/xml-modules",
  "description": "XML Module Organizer",
  "authors": [
    {
      "name": "Benjamin Hoogterp",
      "email": "benjaminhoogterp@gmail.com"
    }
  ],
  "keywords": [
    "xml"
  ],
  "homepage": "http://www.github.com/bhoogter/xml-modules",
  "license": "LGPL v3",
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "scripts": {
    "phar:install-tools": [
      "gem install mime-types -v 2.6.2",
      "curl -LSs https://box-project.github.io/box2/installer.php | php"
    ],
    "phar:build": "box build"
  },
  "repositories": [
    {
        "type": "vcs",
        "url": "https://github.com/bhoogter/xml-file"
    }
  ],
  "require": {
    "bhoogter/class-xml-file": "0.2.45"
  },
  "require-dev": {
    "phpunit/phpunit": "^8"
  },
  "minimum-stability": "dev"
}
